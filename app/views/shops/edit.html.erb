<h1>Set/Update Facebook Page ID</h1>

<%= form_for @shop, url: { action: :update } do |f| %>
  <div class="field">
    <%= f.label :facebook_id %><br>
    <%= f.number_field :facebook_id %>
  </div>
  <div class="actions">
    <%= f.submit 'Set Facebook ID' %>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
